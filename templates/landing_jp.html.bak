    <script>
        // Ë®ÄË™ûÂàá„ÇäÊõø„Åà„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥
        function toggleLanguageDropdown() {
            const dropdown = document.getElementById('languageDropdown');
            dropdown.classList.toggle('show');
        }
        
        // Â§ñÈÉ®„ÇØ„É™„ÉÉ„ÇØ„Åß„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÇíÈñâ„Åò„Çã
        document.addEventListener('click', function(event) {
            const selector = document.querySelector('.language-selector');
            if (!selector.contains(event.target)) {
                document.getElementById('languageDropdown').classList.remove('show');
            }
        });
        
        // CTAËøΩË∑°Ê©üËÉΩ
        function trackCTA(action) {
            // Google Analytics „Å™„Å©„ÅÆËøΩË∑°„Ç≥„Éº„Éâ
            if (typeof gtag !== 'undefined') {
                gtag('event', 'cta_click', {
                    'action': action,
                    'language': 'jp'
                });
            }
            
            // LangPontÂÜÖÈÉ®ÂàÜÊûê
            fetch('/alpha/analytics', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    event_type: 'cta_click',
                    action: action,
                    timestamp: Date.now()
                })
            }).catch(console.error);
        }
        
        // „Çπ„É†„Éº„Çπ„Çπ„ÇØ„É≠„Éº„É´
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // „Éö„Éº„Ç∏„Éì„É•„ÉºËøΩË∑°
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/alpha/analytics', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    event_type: 'page_view',
                    language: 'jp',
                    timestamp: Date.now()
                })
            }).catch(console.error);
        });
        
        // „Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥ÂäπÊûú
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        // Ë¶ÅÁ¥†„Å´„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥ÂäπÊûú„ÇíÈÅ©Áî®
        document.addEventListener('DOMContentLoaded', function() {
            const animatedElements = document.querySelectorAll('.feature-card, .testimonial-card, .pricing-card, .example-card');
            animatedElements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
        });
    </script>
